@using Mvc.PresentationLayer.ViewModels
@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
}


<form method="post" asp-action="Edit" enctype="multipart/form-data">
        <partial name="PartialViews/CreateEditPartial"></partial>

        <div class="mt-2">
            <a asp-action="AddOrRemoveUsers" class="btn btn-info" asp-route-roleId="@Model.Id">add or Remove users</a>
        </div>

        <div class="mt-3">
            <button class="btn btn-success" type="submit">Update</button>
            <a class="btn btn-danger" asp-action="Index">Cancel</a>
        </div>
</form>


