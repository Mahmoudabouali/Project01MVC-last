@using Mvc.PresentationLayer.ViewModels
@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}

    <a asp-action="Create" class="btn btn-primary mt-3">Create New Role</a>

   
<div class="mt-2">
    <form method="get" asp-action="Index" class="row offset-2">
        <div class="col-10">
            <input class="form-control" placeholder="User's name" name="email" required/>
        </div>
        <div class="col-2">
            <input class="btn btn-info" type="submit" value="Search" />
        </div>
    </form>
</div>
    <table class="table table-striped table-hover">
    <thead>
        <tr>
            <td> @Html.DisplayNameFor(d => d.Id)</td>
            <td> @Html.DisplayNameFor(d => d.Name)</td>

            <td> Detalis</td>
            <td> Edit</td>
            <td> Delete</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Id</td>
                <td> @item.Name</td>

                <td><a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i>Details</a></td>
                <td><a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-Edit"></i>Edit</a></td>
                <td><a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i>Delete</a></td>
            </tr>
        }

    </tbody>
    </table>

