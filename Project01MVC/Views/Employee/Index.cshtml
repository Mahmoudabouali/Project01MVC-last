@using Mvc.PresentationLayer.ViewModels
@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<div>
    <a asp-action="Create" class="btn btn-primary mt-3">Create New Employee</a>
</div>
   
<div class="mt-2">
    <form method="get" asp-action="Index" class="row offset-2">
        <div class="col-10">
            <input class="form-control" type="text" placeholder="Employee's name" name="searchValue" required/>
        </div>
        <div class="col-2">
            <input class="btn btn-info" type="submit" value="Search" />
        </div>
    </form>
</div>
    <table class="table table-striped table-hover">
    <thead>
        <tr>
            <td> @Html.DisplayNameFor(d => d.Age)</td>
            <td> @Html.DisplayNameFor(d => d.Name)</td>
            <td> @Html.DisplayNameFor(d => d.Salary)</td>
            <td> @Html.DisplayNameFor(d => d.Department)</td>
            <td> @Html.DisplayNameFor(d => d.Email)</td>
            <td> @Html.DisplayNameFor(d => d.Phone)</td>
            <td> @Html.DisplayNameFor(d => d.Address)</td>
                <td> @Html.DisplayNameFor(d => d.IsActive)</td>

            <td> Detalis</td>
            <td> Edit</td>
            <td> Delete</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Age</td>
                <td> @item.Name</td>
                <td> @Html.DisplayFor(e => item.Salary)</td>
                <td> @item.Department?.Name</td>
                <td> @Html.DisplayFor(e => item.Email)</td>
                <td> @item.Phone</td>
                <td> @item.Address</td>
                
                
                <td>
                    @if (item.IsActive)
                    {
                        <i class="fa-solid fa-circle" style="color:green"></i>
                    }
                    else
                    {
                        <i class="fa-solid fa-circle" style="color:red"></i>
                    }

                </td>

                <td><a asp-action="Details" asp-route-id="@Model"><i class="fas fa-eye"></i>Details</a></td>
                <td><a asp-action="Edit" asp-route-id="@Model"><i class="fas fa-Edit"></i>Edit</a></td>
                <td><a asp-action="Delete" asp-route-id="@Model"><i class="fas fa-trash"></i>Delete</a></td>
            </tr>
        }

    </tbody>
    </table>

