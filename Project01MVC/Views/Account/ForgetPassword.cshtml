@using Mvc.PresentationLayer.ViewModels
@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="ForgetPassword" method="post">
			<div asp-validation-summary="All"></div>
			<input class="text" type="text" asp-for="Email" placeholder="Email" required="">
			<span asp-validation-for="Email" class="text-danger"></span>
			<br />

			<br />
			<input type="submit" value="send reset password email">
		</form>
		<p><a asp-action="Login"> Cancel!</a></p>
		<br />

	</div>
</div>

@section Validation {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}



