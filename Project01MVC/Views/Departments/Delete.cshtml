@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete @Model.Name Department</h1>
<div class="form-group">
    <label asp-for="Code"></label>
    <input readonly class="form-control" asp-for="Code" />
</div>
<div class="form-group">
    <label asp-for="Name"></label>
    <input readonly class="form-control" asp-for="Name" />
</div>
<div class="form-group">
    <label asp-for="MyProperty"></label>
    <input readonly class="form-control" asp-for="MyProperty" />
</div>
<div class="mt-3">
    <button class="btn btn-success" type="submit">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</div>

