
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}


<div>
    <a class="btn btn-primary mt-3" asp-action="Create">Craete new Department</a>
</div>
@if (Model.Any())
{
    <h1>All Departments</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d => d.Code)</td>
                <td>@Html.DisplayNameFor(d => d.Name)</td>
                <td>@Html.DisplayNameFor(d => d.MyProperty)</td>


                <td>Details</td>
                <td>Edit</td>
                <td>Delete</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.MyProperty</td>

                    <partial name="_ButtonsPartial" model="item.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 alert-warning"> 
        <h2>no departmet</h2>
    </div>
}